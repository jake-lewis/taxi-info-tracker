doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
      span(class="navbar-text navbar-brand") Taxi Info Tracker
      button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbarToggle", aria-controls="navbarToggle", aria-expanded="false", aria-label="Toggle Navigation")
        span(class="navbar-toggler-icon")
      div(class="collapse navbar-collapse", id="navbarToggle")
        ul(class="navbar-nav mr-auto mt-2 mt-lg-0")
          li(class="nav-item", id ="index")
            a(class="nav-link", href="/") Home
          li(class="nav-item dropdown", id="route")
            button(class="btn nav-link btn-menu dropdown-toggle", type="button", id="routeDropdown", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Routes
            div(class="dropdown-menu bg-dark", aria-labelledby="dropdownMenuButton")
              a(class="nav-link", href="/route") Log Route
              a(class="nav-link", href="/routeList") Route List
          li(class="nav-item dropdown", id="job")
            button(class="btn nav-link btn-menu dropdown-toggle", type="button", id="jobDropdown", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Jobs
            div(class="dropdown-menu bg-dark", aria-labelledby="dropdownMenuButton")
              a(class="nav-link", href="/createJob") Record Job
              a(class="nav-link", href="#") Job List
          li(class="nav-item", id="about")
            a(class="nav-link", href="/about") About
        div(class="dropdown-divider")
        ul(class="navbar-nav mr-0 mt-2 mt-lg-0")
          li(class="navbar-item")
            if user
              a(class="nav-link", href="/profile") #{user.username}
            else
              a(class="nav-link", href="/login") Login
          li(class="navbar-item")
            if user
              a(class="nav-link", href="/logout") Logout
            else
              a(class="nav-link", href="/signup") Signup
    div(class="container-fluid")
      block content
  script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous")
  script(src="javascripts/navbar.js")